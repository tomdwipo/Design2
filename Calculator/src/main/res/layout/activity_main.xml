<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/operation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/text.primary"
            android:textSize="@dimen/text.normal"/>

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="@color/text.primary"
            android:textSize="@dimen/text.xxxxlarge"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:elevation="15dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnAC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="AC"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:id="@+id/btnNegation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="+/-"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:id="@+id/btnPercent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="%"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnOperation_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="/"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="7"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="8"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="9"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnOperation_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="x"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="4"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="5"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="6"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnOperation_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="+"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="1"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="2"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="3"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnOperation_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="-"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="0"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="00"
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:onClick="btnNumber_Click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="."
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary" />
            <Button
                android:id="@+id/btnSum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/as_button"
                android:text="="
                android:textSize="@dimen/text.normal"
                android:textColor="@color/text.primary"
                android:elevation="25dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
